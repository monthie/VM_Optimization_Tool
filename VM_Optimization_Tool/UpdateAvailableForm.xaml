<Window x:Class="VM_Optimization_Tool.UpdateAvailableForm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:VM_Optimization_Tool"
        mc:Ignorable="d"
        Title="UpdateAvailableForm" Height="300" Width="283">
    <Grid>
        <Label x:Name="label" Content="An update is available!" HorizontalAlignment="Left" Margin="19,31,0,0" VerticalAlignment="Top" Width="236" FontSize="22"/>
        <TextBox x:Name="textbox" HorizontalAlignment="Left" Height="89" Margin="10,115,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="245" IsReadOnly="True"/>
        <Button x:Name="updateButton" Content="Update" HorizontalAlignment="Left" Margin="19,220,0,0" VerticalAlignment="Top" Width="75" Click="Update_Click"/>
        <Button x:Name="abortButton" Content="Abort" HorizontalAlignment="Left" Margin="180,220,0,0" VerticalAlignment="Top" Width="75" Click="Abort_Click"/>

    </Grid>
</Window>
