<Window x:Class="VM_Optimization_Tool.WindowsUpdateFrame"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:VM_Optimization_Tool"
        mc:Ignorable="d"
        Title="WindowsUpdateFrame" Height="400" Width="500" WindowStartupLocation="CenterScreen" ResizeMode="NoResize">
    <DockPanel Grid.ColumnSpan="3">
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="_File">
                <MenuItem Header="_Exit" x:Name="_Exit" Click="Exit_Click"/>
            </MenuItem>
        </Menu>
        <Grid>

            <Button x:Name="InstallButton" Content="Install" HorizontalAlignment="Center" Margin="0,0,0,25" VerticalAlignment="Bottom" Width="100" Click="Button_Click" Height="25" RenderTransformOrigin="0.5,0.5"/>
            <TextBlock HorizontalAlignment="Center" Height="25" Margin="0,175,0,0" VerticalAlignment="Top" Width="120"/>
            <TextBox x:Name="textBox1" ScrollViewer.HorizontalScrollBarVisibility="Disabled" ScrollViewer.VerticalScrollBarVisibility="Auto" HorizontalAlignment="Center" Height="275" Margin="0,10,0,0" TextWrapping="Wrap" Text="Searching for Updates...." VerticalAlignment="Top" Width="450" IsReadOnly="True"/>


        </Grid>
    </DockPanel>

</Window>
